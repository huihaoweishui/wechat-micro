.container{
  font-size: 11pt;
}
.hr {
  width: 100%;
  height: 3rpx;
  background-color: gainsboro;
}

.scrollView {
  width: 100%;
  white-space: nowrap;
  padding: 18rpx;
}

.tab {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: baseline;
}
.chosen {
  color: #0198e9;
}
.scrollItem {
  display: inline-block;
  margin-left: 18rpx;
}
.scrollContentView {
  overflow: hidden;
  padding: 0;
  margin: 0;
}

.contentItem {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}

.hehe {
  width: 50%;
  margin: 12rpx;
}

.image {
  width: 300rpx;
  height: 200rpx;
}

.contentImg {
  width: 100%;
  height: 100%;
}

.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stateAndPlace {
  font-size: 20rpx;
  font-weight: 100;
  color: #a2a2a2;
  margin-bottom: 40rpx;
}

.rightContent {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  color: #f60;
}

.priceAndOperation {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #f60;
  align-items: flex-end;
}

.price {
  font-size: 25rpx;
}

.operation {
  font-size: 25rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  color: #f60;
  border: 1px solid #f60;
  align-self: flex-end;
  text-align: right;
  margin-right: 10rpx;
}
.scrollItemHr {
  width: 100%;
  height: 3rpx;
  background-color: gainsboro;
}