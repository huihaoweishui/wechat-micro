.page {
  font-size: 11pt;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-content: space-between;
  overflow:hidden;
}

.headerLine {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}
.scrollItemHr{
  width: 100%;
  height: 2rpx;
  background-color: #eee;
  margin-top: 17rpx;
}
.headerEndLine {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: baseline;
}

.city {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: baseline;
  margin-left: 18rpx;
}

.hd {
  height: 13rpx;
  width: 13rpx;
  border-width: 3rpx 3rpx 0 0;
  border-style: solid;
  transform: rotate(135deg);
  margin-left: 10rpx;
  align-self: center;
}

.hd:hover {
  transform: rotate(-45deg);
}
.hd2 {
  height: 13rpx;
  width: 13rpx;
  border-width: 3rpx 3rpx 0 0;
  border-style: solid;
  transform: rotate(135deg);
  margin-left: 10rpx;
  align-self: center;
  margin-top: 10rpx;
}

.hd2:hover {
  transform: rotate(-45deg);
}
.img {
  width: 30rpx;
  height: 30rpx;
}

.search {
  background-color: #e6e6e6;
  border-radius: 12rpx;
  font-weight: 100;
  color: grey;
  flex-grow: 2;
  margin-left: -55rpx;
  margin-right: -40rpx;
}

.searchImg {
  vertical-align: middle;
  margin-right: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
}

.activity {
  color: #5ca5d6;
  text-align: right;
  margin-right: 15rpx;
}

.item {
  flex-grow: 1;
}

.scrollView {
  width: 90%;
  white-space: nowrap;
  margin-top: 15rpx;
}

.scrollItem {
  display: inline-block;
  margin-left: 18rpx;
}

.scrollItem:first-child {
  margin-left: 0rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tabEndLine {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.tab {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: baseline;
  margin: 0
}

/*内容页*/

.scrollContentView {
  overflow:auto;
}

.contentItem {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}

.hehe {
  width: 50%;
  margin: 12rpx;
}
.image{
  width: 300rpx;
  height: 200rpx;
}
.contentImg {
  width: 100%;
  height: 100%;
}

.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stateAndPlace {
  font-size: 20rpx;
  font-weight: 100;
  color: #a2a2a2;
  margin-bottom: 40rpx;
}
.rightContent{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  color: #f60;
}
.priceAndOperation {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #f60;
  align-items: flex-end;
}

.price {
  font-size: 25rpx;
}

.operation {
  font-size: 25rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  color: #f60;
  border: 1px solid #f60; 
  align-self: flex-end;
  text-align: right;
  margin-right: 10rpx
}
