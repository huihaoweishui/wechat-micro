.container {
  width: 100%;
  height: 100%;
  flex-flow: row nowrap;
  display: flex;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.flex-item {
  border: 1px solid #fff;
  flex-grow: 1;
  flex-shrink: 1;
}

.search {
  flex-grow: 2;
  background-color: lightgrey;
  border-radius:5px;
}

.city {
  margin-left: 10px;
}

.activity {
  text-align: right;
  margin-right: 5px;
  color: blue;
}

.hr {
  background: #e0e3da;
  width: 100%;
  height: 1rpx;
}
