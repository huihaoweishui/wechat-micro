.page {
  font-size: 11pt;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-content: space-between;
  overflow: hidden;
}

.headerLine {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.scrollItemHr {
  width: 100%;
  height: 3rpx;
  background-color: #eee;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.headerEndLine {
  width: 100%;
  height: 3rpx;
  background-color: #eee;
}

.header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: baseline;
}

.city {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: baseline;
  margin-left: 18rpx;
}

.hd {
  height: 13rpx;
  width: 13rpx;
  border-width: 3rpx 3rpx 0 0;
  border-style: solid;
  transform: rotate(135deg);
  margin-left: 10rpx;
  align-self: center;
}

/* .hd:hover {
  transform: rotate(-45deg);
} */

.hd2 {
  height: 15rpx;
  width: 15rpx;
  border-width: 3rpx 3rpx 0 0;
  border-style: solid;
  transform: rotate(135deg);
  margin-left: 10rpx;
  align-self: center;
  margin-top: 10rpx;
}

.right {
  width: 10%;
}

/* .hd2:hover {
  transform: rotate(-45deg);
} */

.img {
  width: 30rpx;
  height: 30rpx;
}

.search {
  background-color: #e6e6e6;
  border-radius: 12rpx;
  font-weight: 100;
  color: grey;
  flex-grow: 2;
  margin-left: -55rpx;
  margin-right: -40rpx;
}

.searchImg {
  vertical-align: middle;
  margin-right: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
}

.activity {
  color: #5ca5d6;
  text-align: right;
  margin-right: 15rpx;
}

.item {
  flex-grow: 1;
}

.scrollView {
  width: 90%;
  white-space: nowrap;
  margin-top: 15rpx;
  margin-left: 15rpx;
}

.scrollItem {
  display: inline-block;
  margin-left: 18rpx;
}

.scrollView :first-child {
  margin-left: 0;
}

.chosen {
  color: #0198e9;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tabEndLine {
  width: 100%;
  height: 3rpx;
  background-color: #eee;
}

.tab {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: baseline;
}

/*内容页*/

.scrollContentView {
  overflow: hidden;
  padding: 0;
  margin: 0;
}

.contentItem {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}

.hehe {
  width: 50%;
  margin: 12rpx;
}

.image {
  width: 300rpx;
  height: 200rpx;
}

.contentImg {
  width: 100%;
  height: 100%;
}

.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stateAndPlace {
  font-size: 20rpx;
  font-weight: 100;
  color: #a2a2a2;
  margin-bottom: 40rpx;
}

.rightContent {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  color: #f60;
}

.priceAndOperation {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #f60;
  align-items: flex-end;
}

.price {
  font-size: 25rpx;
}

.operation {
  font-size: 25rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  color: #f60;
  border: 1px solid #f60;
  align-self: flex-end;
  text-align: right;
  margin-right: 10rpx;
}

/*全部分类*/

.category {
  background-color: white;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 15rpx;
}

.categoryItem {
  width: 20%;
  box-sizing: border-box;
  text-align: center;
  border: thin solid gainsboro;
  padding: 10rpx;
  margin: 15rpx;
  font-size: 26rpx;
}

.categoryItemClick {
  border-color: #72c6ee;
  color: #72c6ee;
}

.allCategory {
  background-color: white;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 1rpx;
}

.allHd2 {
  margin-right: 20rpx;
  margin-top: 15rpx;
  transform: rotate(-45deg);
}

.allText {
  margin-left: 18rpx;
  margin-bottom: 10rpx;
}

.zhezao {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 55px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

.separate {
  width: 100%;
  height: 1rpx;
  background-color: gainsboro;
}
/* cityshow */
.city2 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 50px;
  background: white;
}
.cityScroll{
 background-color: white;
}
.titleText {
  background-color: #efeef4;
  font-size: 30rpx;
  font-weight: 100;
  color: grey;
  padding: 10rpx;
  padding-left: 25rpx;
}

.position {
  font-size: 30rpx;
  padding: 10rpx;
  padding-left: 25rpx;
}

.initial {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}

.initialItem {
  font-weight: 300;
  font-size: 22rpx;
  width: 25%;
  box-sizing: border-box;
  text-align: center;
  border-right: thin solid gainsboro;
  border-bottom: thin solid gainsboro;
  padding: 13rpx;
}

