.page {
  font-size: 11pt;
}

.headerText {
  font-size: 14pt;
}

.visitCount {
  display: flex;
  flex-flow: row nowrap;
  justify-content: baseline;
  font-size: 9pt;
  font-weight: 200;
  color: grey;
  align-items: center; /*垂直居中*/
}

.guarantee {
  color: orange;
  margin-right: 10rpx;
}

.share {
  margin-right: auto;
}

.image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.verticalText {
  vertical-align: middle;
}

.money {
  color: orange;
}

.hr {
  height: 3rpx;
  width: 100%;
  background-color: gainsboro;
}

.padding {
  padding: 21rpx 10rpx;
}

.host {
  display: flex;
  flex-flow: column nowrap;
}

.top {
  display: flex;
  flex-flow: row nowrap;
}

.description {
  display: flex;
  flex-flow: column nowrap;
  margin-left: 30rpx;
  justify-content: flex-start;
  font-size: 9pt;
}

.image2 {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background-color: gainsboro;
}

.isFoucus {
  align-self: center;
}

.hostName {
  font-size: 12pt;
}

.slogan {
  color: grey;
  margin-top: 10rpx;
}

.isFoucus {
  color: blue;
}

.thickHr {
  height: 20rpx;
}

.host2 {
  padding: 5rpx 10rpx;
  background-color: lightblue;
}

.pictureList {
  padding: 10rpx;
}

.collectionAndReport {
  display: flex;
  flex-flow: row nowrap;
}

.collection {
  color: blue;
  margin-right: auto;
}

.report {
  color: grey;
  margin-right: 10rpx;
}

.enroll {
  display: flex;
  flex-flow: row nowrap;
}

.hasParticipateCount {
  margin-right: auto;
}

.more {
  color: blue;
  margin-right: 10rpx;
}
.participateList{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-evenly; 
}



.scrollContentView {
  overflow: hidden;
}

.contentItem {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.hehe {
  width: 50%;
}

.image3 {
  width: 350rpx;
  height: 200rpx;
}

.contentImg {
  width: 100%;
  height: 100%;
}

.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stateAndPlace {
  font-size: 20rpx;
  font-weight: 100;
  color: #a2a2a2;
  margin-bottom: 40rpx;
}

.rightContent {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  color: #f60;
}

.priceAndOperation {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #f60;
  align-items: flex-end;
}

.price {
  font-size: 25rpx;
}

.operation {
  font-size: 25rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  color: #f60;
  border: 1px solid #f60;
  align-self: flex-end;
  text-align: right;
  margin-right: 20rpx;
}

