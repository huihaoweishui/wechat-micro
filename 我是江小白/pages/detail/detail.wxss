}

.thickHr {
  height: 20rpx;
}

.host2 {
  padding: 5rpx 10rpx;
  background-color: light#009ae8;
}

.pictureList {
  padding: 10rpx;
}

.collectionAndReport {
  display: flex;
  flex-flow: row nowrap;
}

.collection {
  color: #009ae8;
  margin-right: auto;
}

.report {
  color: grey;
  margin-right: 10rpx;
}

.enroll {
  display: flex;
  flex-flow: row nowrap;
}

.hasParticipateCount {
  margin-right: auto;
}

.more {
  color: #009ae8;
  margin-right: 10rpx;
}

.participateList {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}

.scrollContentView {
  overflow: hidden;
}

.contentItem {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.hehe {
  width: 50%;
}

.image3 {
  width: 350rpx;
  height: 200rpx;
}

.contentImg {
  width: 100%;
  height: 100%;
}

.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stateAndPlace {
  font-size: 20rpx;
  font-weight: 100;
  color: #a2a2a2;
  margin-bottom: 40rpx;
}

.rightContent {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  color: #f60;
}

.priceAndOperation {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #f60;
  align-items: flex-end;
}

.price {
  font-size: 25rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.operation {
  font-size: 25rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  color: #f60;
  border: 1px solid #f60;
  align-self: flex-end;
  text-align: right;
  margin-right: 20rpx;
}

.fixed {
  width: 100%;
  font-size: 9pt;
  position: fixed;
  bottom: 0;
}

.otherItem {
  width: 20%;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
}

.image4 {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100rpx;
  background-color: gainsboro;
}

.back {
  text-align: right;
  margin-right: 20rpx;
}

.other {
  margin-top: 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: baseline;
  background-color: gainsboro;
  border-bottom-right-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}

.enroll2 {
  display: flex;
  flex-flow: column nowrap;
  width: 60%;
  background-color: #009ae8;
  align-items: center;
  justify-content: center;
}

.enrollText {
  font-size: 10pt;
  color: white;
}

.image5 {
  text-align: center;
}

.fixedText {
  text-align: center;
}

