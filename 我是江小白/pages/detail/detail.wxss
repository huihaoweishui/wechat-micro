.page {
  font-size: 11pt;
}

.headerText {
  font-size: 14pt;
}

.visitCount {
  display: flex;
  flex-flow: row nowrap;
  justify-content: baseline;
  font-size: 9pt;
  font-weight: 200;
  color: grey;
  align-items: center; /*垂直居中*/
}

.guarantee {
  color: orange;
  margin-right: 10rpx;
}

.share {
  margin-right: auto;
}

.image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.verticalText {
  vertical-align: middle;
}

.money {
  color: orange;
  margin-right: auto;
}

.hd {
  height: 13rpx;
  width: 13rpx;
  border-width: 3rpx 3rpx 0 0;
  border-style: solid;
  transform: rotate(45deg);
  margin-right: 15rpx;
}

.hr {
  height: 3rpx;
  width: 100%;
  background-color: gainsboro;
}

.padding {
  padding: 21rpx 10rpx;
}

.host {
  display: flex;
  flex-flow: column nowrap;
}

.top {
  display: flex;
  flex-flow: row nowrap;
}

.description {
  display: flex;
  flex-flow: column nowrap;
  margin-left: 30rpx;
  justify-content: flex-start;
  font-size: 9pt;
}

.hostImage {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx;
  background-color: gainsboro;
}

.image2 {
  width: 80rpx;
  height: 80rpx;
