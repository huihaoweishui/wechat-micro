.orderView {
  background-color: #efeef4;
  display: flex;
  justify-content: center;
  flex-flow: column nowrap;
  align-items: center;
  font-size: 35rpx;
}

.myFocus {
  align-self: flex-start;
  padding: 25rpx 25rpx;
}

.noOrder {
  width: 200rpx;
  height: 200rpx;
  border: 1 solid #f00;
  border-radius: 100rpx;
  background-color: #e3e5ea;
}

.noOrderText {
  font-size: 25rpx;
  font-weight: 100;
  color: grey;
  margin-top: 10rpx;
  margin-bottom: 250rpx;
}

/* scroll-view */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.viewItem {
  background-color: white;
  margin: 15rpx;
  border-radius: 10rpx;
  padding: 15rpx;
}

.hr {
  width: 100%;
  height: 3rpx;
  background-color: gainsboro;
}

.top {
  display: flex;
  flex-flow: row nowrap;
  padding: 10rpx;
}

.right {
  display: flex;
  flex-flow: column nowrap;
}

.image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100rpx;
  border: 1rpx solid gainsboro;
}

.header {
  align-self: center;
}

.up {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.choose {
  padding-bottom: 35rpx;
  margin-right: 30rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: auto;
  margin-left: 15rpx;
}

.icon2 {
  width: 40rpx;
  height: 40rpx;
  margin-right: auto;
  margin-left: 15rpx;
}

.text1 {
  margin-left: 15rpx;
  color: grey;
  font-size: 25rpx;
}

.text2 {
  margin-left: 15rpx;
  font-size: 25rpx;
  font-weight: 400;
}

.bigger {
  color: black;
  font-size: 28rpx;
}

.bottom {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
  margin-top: 15rpx;
}

.item {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.vertical {
  width: 4rpx;
  height: 60rpx;
  background-color: gainsboro;
}
