.container {
  font-size: 11pt;
  height: 100%;
}

.padding {
  padding: 15rpx 20rpx;
}

.header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.hr {
  height: 3rpx;
  width: 100%;
  background-color: #f2f2f2;
}

.thickHr {
  height: 20rpx;
}

.host {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.hostImage {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100rpx;
  background-color: gainsboro;
}

.contentItem {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  background-color: #f2f2f2;
}

.hehe {
  width: 30%;
}

.image {
  width: 200rpx;
  height: 100rpx;
}

.contentImg {
  width: 100%;
  height: 100%;
}

.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stateAndPlace {
  font-size: 20rpx;
  font-weight: 100;
  color: #a2a2a2;
  margin-top: 5rpx;
}

.rightContent {
  width: 70%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  margin-left: -300rpx;
}

.font {
  font-size: 9pt;
}

.guarantee {
  font-size: 8pt;
  color: orange;
  padding-left: 5rpx;
}

.image2 {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.left {
  height: 100%;
  overflow: hidden;
  background-color: #f2f2f2;
}

.total {
  display: inline-block;
  border-top: 1rpx solid gainsboro;
  width: 60%;
}

.totalPrice {
  color: orange;
  margin-left: 10rpx;
}

.countTotal {
  margin-left: 28rpx;
}

.next {
  font-size: 11pt;
  display: inline-block;
  width: 40%;
  text-align: center;
  background-color: #009ae8;
}

.padding3 {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.heji {
  border-bottom-right-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
}