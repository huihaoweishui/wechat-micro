.container {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  font-size: 10pt;
  margin: 0;
}

.top {
  margin: 0 auto;
}

.hostImage {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100rpx;
  background-color: gainsboro;
}

.hr {
  height: 3rpx;
  width: 100%;
  background-color: gainsboro;
}

.host {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.slogan {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
}
.title {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}