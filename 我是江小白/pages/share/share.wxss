.container {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  font-size: 9pt;
  margin: 0;
}

.top {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: flex-start;
  border: 1rpx solid gainsboro;
  border-radius: 10rpx;
  margin: 30rpx 50rpx;
  background-color: white;
  padding: 15rpx;
  box-shadow: 0 0 10px gainsboro;
}

.hostImage {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100rpx;
  background-color: gainsboro;
}

.hr {
  height: 3rpx;
  width: 100%;
  background-color: gainsboro;
}

.contentImg {
  width: 100%;
}

.host {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 15rpx;
}

.slogan {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  margin-left: 10rpx;
}

.title {
  font-size: 10pt;
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.activity {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: flex-start;
  align-self: center;
}

.item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.item1 {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-top: 5rpx;
}

.bottom {
  margin-top: 50rpx;
}

.separate1 {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.separate {
  display: inline-block;
  height: 3rpx;
  width: 25%;
  background-color: gainsboro;
}

.shareImg {
  margin: 60rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.image6 {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  margin: 30rpx;
  align-items: center;
}

.iconText {
  margin: 10rpx;
  font-size: 10pt;
  color: grey;
}
